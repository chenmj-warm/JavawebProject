<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC " -//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="entity.Bookinfo" table="bookinfo" catalog="book">
		<id name="id" type="string" column="id"> 
		<generator class="identity"/>
		</id>
		<property name="bookname" type="string"><column name="bookname" length="100" not-null="true"/></property>
		<property name="author" type="string"><column name="author" length="30" not-null="true"/></property>
		<property name="press" type="string"><column name="press" length="20" not-null="true"/></property>
		<property name="price" type="string"><column name="price" length="20" not-null="true"/></property>
	</class>
</hibernate-mapping>